<% layout("/layouts/boilerplate.ejs") -%>

<body>
    <div class="container my-4">
        <h3>Create a New Listing</h3>
        <form id="listingForm" method="POST" action="/listings" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" placeholder="Add a catchy title" name="title" class="form-control" id="title" required>
                <div class="invalid-feedback">Please enter a valid title.</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea placeholder="" name="description" class="form-control" id="description" required></textarea>
                <div class="invalid-feedback">Please enter a description.</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="text" placeholder="Enter filename" name="filename" class="form-control" id="filename">
                <div class="invalid-feedback">Please enter a filename.</div>
                <input type="text" placeholder="Enter image URL/link" name="url" class="form-control" id="image">
                <div class="invalid-feedback">Please enter an image URL/link.</div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input  placeholder="1000" name="price" class="form-control" id="price" required>
                    <div class="invalid-feedback">Please enter a price.</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" placeholder="India" name="country" class="form-control" id="country" required>
                    <div class="invalid-feedback">Please enter a country.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" placeholder="Noida, India" name="location" class="form-control" id="location" required>
                <div class="invalid-feedback">Please enter a location.</div>
            </div>

            <button type="submit" class="btn btn-danger">Add</button>
        </form>
        <div id="formFeedback" class="mt-3"></div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>